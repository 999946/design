{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "removeComments": true,
        "preserveConstEnums": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "built",
        "types": [
            "reflect-metadata"
        ],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "nt-auto-bind": [
                "components/common/auto-bind/index"
            ]
        }
    },
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "forkChecker": true,
        "useCache": true
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": [
        "node_modules",
        "built",
        "built-components",
        "built-production"
    ]
}